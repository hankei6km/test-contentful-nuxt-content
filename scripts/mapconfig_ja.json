{
  "passthruUnmapped": true,
  "media": {
    "image": {
      "library": [
        {
          "src": "https://images.microcms-assets.io/assets/",
          "kind": "imgix"
        }
      ]
    }
  },
  "flds": [
    {
      "srcName": "mainVisual",
      "dstName": "mainVisual",
      "fldType": "image"
    },
    {
      "srcName": "content",
      "dstName": "content",
      "fldType": "html",
      "convert": "markdown",
      "toMarkdownOpts": {
        "embedImgAttrs": [
          {
            "baseURL": "https://images.microcms-assets.io/assets/",
            "embedTo": "alt"
          }
        ]
      }
    },
    {
      "srcName": "category",
      "dstName": "category",
      "fldType": "string",
      "transform": "label[\"ja\" in lang].label"
    },
    {
      "srcName": "list",
      "dstName": "list",
      "fldType": "object",
      "transform": "$count($$)>0 ? $${title:items[fieldId=\"item\"].item} : {}"
    }
  ]
}